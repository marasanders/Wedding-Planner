<h1>Edit Place Cards</h1>

<%= form_for([@guest,@place_card]) do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :table %>
  <%= f.text_field :table_number %>

  <%= f.label :print %>
  <%= f.check_box :print %>


  <%= f.submit %>

<% end %>


<h3><%= link_to "Delete!", [@guest,@place_card], method: :delete, class: "delete" %></h3>
