<h2  class="text-center" id = "ultimate-orange">Edit Guest</h2>

<%= form_for @guest do |f| %>
  <%= f.label :mailing_title %>
  <%= f.text_field :mailing_title %>
  <div class = "invisible">
    ,
  </div>
  <div>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>
  <%= f.label :last_name %>
  <%= f.text_field :last_name %>
  <%= f.label :spouse_first_name %>
  <%= f.text_field :spouse_first_name %>
  <%= f.label :spouse_last_name %>
  <%= f.text_field :spouse_last_name %>
</div>
<div class = "invisible">
.
</div>
<div>
  <%= f.label :address_line1 %>
  <%= f.text_field :address_line1 %>
  <%= f.label :address_line2 %>
  <%= f.text_field :address_line2 %>
  <%= f.label :city %>
  <%= f.text_field :city %>
  <%= f.label :state %>
  <%= f.text_field :state %>
  <%= f.label :zip %>
  <%= f.text_field :zip %>
  <%= f.label :country %>
  <%= f.text_field :country %>
</div>
<div class = "invisible">
  .
</div>
  <%= f.radio_button :relationship, "Bride Family" %>
  <%= f.label :relationship, "Bride Family" %>
  <%= f.radio_button :relationship, "Bride Friend" %>
  <%= f.label :relationship, "Bride Friend" %>
  <%= f.radio_button :relationship, "Groom Family" %>
  <%= f.label :relationship, "Groom Family" %>
  <%= f.radio_button :relationship, "Groom Friend" %>
  <%= f.label :relationship, "Groom Friend" %>
  <%= f.radio_button :relationship, "Friend" %>
  <%= f.label :relationship, "Friend" %>
  <div class = "invisible">
    .
  </div>
  <%= f.label :email %>
  <%= f.text_field :email%>
  <%= f.label :spouse_email %>
  <%= f.text_field :spouse_email%>
<div class = "invisible">
    ,
  </div>
  <%= f.label :send_invitation %>
  <%= f.check_box :send_invitation %>
  <%= f.label :gift_received %>
  <%= f.text_field :gift_received%>
  <%= f.label :thank_you_sent%>
  <%= f.check_box :thank_you_sent %>

  <div class = "invisible">
    .
  </div>

  <h5 class="text-center" id = "ultimate-orange">
    <%= f.submit %>
  </h5>
<% end %>
<div class = "invisible">
  .
</div>
<h4 class="text-center" id = "ultimate-orange">
  <%= form_for @guest, method: :delete do |f| %>
  <%= f.submit "Delete!", class: "delete" %>
  <% end %>
</h4>
<div class = "invisible">
.
</div>
<nav>
  <h4 class="text-center" id = "ultimate-orange"><%= link_to "Back to Home Page", guests_path%></h4>
</nav>
