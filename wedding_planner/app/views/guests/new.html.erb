<h2>New Guest</h2>

<%= form_for @guest do |f| %>
  <%= f.label :mailing_title %>
  <%= f.text_field :mailing_title %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>
  <%= f.label :last_name %>
  <%= f.text_field :last_name %>
  <%= f.label :spouse_first_name %>
  <%= f.text_field :spouse_first_name %>
  <%= f.label :address_line1 %>
  <%= f.text_field :address_line1 %>
  <%= f.label :address_line2 %>
  <%= f.text_field :address_line2 %>
  <%= f.label :city %>
  <%= f.text_field :city %>
  <%= f.label :state %>
  <%= f.text_field :state %>
  <%= f.label :zip %>
  <%= f.text_field :zip %>
  <%= f.label :country %>
  <%= f.text_field :country %>
  <%= f.label :relationship %>
  <%= f.text_field :relationship %>
  <%= f.label :email %>
  <%= f.text_field :email%>
  <%= f.label :spouse_email %>
  <%= f.text_field :spouse_email%>
  <%= f.label :send_invitation %>
  <%= f.check_box :send_invitation %>
  <%= f.label :gift_received %>
  <%= f.text_field :gift_received%>
  <%= f.label :thank_you_sent%>
  <%= f.check_box :thank_you_sent %>

  <%= f.submit %>
<% end %>
